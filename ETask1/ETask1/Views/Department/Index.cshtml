@model PagedList.IPagedList<ETask1.Models.Department>

@{
    ViewBag.Title = "Index";
}

@section menu
{
  @Html.Partial("MenuPartialView")
}


<span class="cap">Departments</span>
					
					<span class="right"><a href="@Url.Action("Create")"><img src="@Url.Content("~/Content/images/add-img.png")" width="35" height="35"></a></span>
					
					<br><br>
					
					<hr class="hrStyle"></hr>
		
					<table class="tblDemo" id="no-more-tables"> 

						<tr>
			
							<th>Department ID</th>
							
							<th>Department Name</th>
							
							@*<th>Department Head</th>*@
							
							<th></th>
				
						</tr>
                        



@foreach (var item in Model) {
    <tr>
    <td>
            @Html.DisplayFor(modelItem => item.DepartmentID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DepartmentName)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.DepartmentHead)
        </td>*@
        <td>
        <a href="@Url.Action("Edit",new { id=item.DepartmentID })">
        <img src="@Url.Content("~/Content/images/edit-img.jpg")" width="25" height="25"></a>
        
           
        </td>
    </tr>
}
<tr>
<td id="pagelist" colspan="6"><center>
    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
    of @Model.PageCount
     
    @if (Model.HasPreviousPage)
    {
        @Html.ActionLink("<<", "Index", new { page = 1 })
        @Html.Raw(" ");
        @Html.ActionLink("< Prev", "Index", new { page = Model.PageNumber - 1 })
    }
    else
    {
        @:<<
        @Html.Raw(" ");
        @:< Prev
    }
     
    @if (Model.HasNextPage)
    {
        @Html.ActionLink("Next >", "Index", new { page = Model.PageNumber + 1 })
        @Html.Raw(" ");
        @Html.ActionLink(">>", "Index", new { page = Model.PageCount })
    }
    else
    {
        @:Next >
        @Html.Raw(" ")
        @:>>
    }
</center></td> 
</tr>

</table>



